# Docker Environment Configuration
NODE_ENV=docker
PORT=3000

# Database Configuration (Docker containers)
DATABASE_URL="postgresql://postgres:postgres@postgres:5432/sector_staff_v2?schema=public"

# Redis Configuration (Docker containers)
REDIS_URL="redis://redis:6379"

# JWT Configuration
JWT_SECRET="docker-jwt-secret-change-in-production"
JWT_EXPIRATION_TIME="15m"
REFRESH_TOKEN_SECRET="docker-refresh-token-secret-change-in-production"
REFRESH_TOKEN_EXPIRATION_TIME="7d"

# S3/MinIO Configuration (Docker containers)
S3_ENDPOINT="http://minio:9000"
S3_ACCESS_KEY="minioadmin"
S3_SECRET_KEY="minioadmin"
S3_BUCKET_NAME="sector-staff-docker"

# Logging Configuration
LOG_LEVEL="info"

# CORS Configuration
CORS_ORIGIN="http://localhost:3000,http://localhost:3001"

# Rate Limiting
THROTTLE_TTL=60
THROTTLE_LIMIT=200

# API Configuration
API_PREFIX="api/v1"

# Health Check
HEALTH_CHECK_ENABLED=true

# Docker specific
CONTAINER_NAME="sector-staff-app"
