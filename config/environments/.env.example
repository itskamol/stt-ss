# Environment Template
# Copy this file and rename to create your environment (e.g., local.env)

# App Settings
ENVIRONMENT=development
NODE_ENV=development
PORT=3000
APP_PORT=3001

# Docker Settings
COMPOSE_PROJECT_NAME=staff-app
BUILD_TARGET=development
RESTART_POLICY=unless-stopped
DISABLE_HEALTHCHECK=false
DEPENDS_CONDITION=service_healthy

# Database
POSTGRES_DB=sector_staff_v2
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_PORT=5433
DATABASE_URL=postgresql://postgres:postgres@postgres:5432/sector_staff_v2?schema=public

# Redis
REDIS_URL=redis://redis:6379
REDIS_PORT=6380

# Security
JWT_SECRET=your-super-secret-jwt-key-here-32-chars
REFRESH_TOKEN_SECRET=your-refresh-token-secret-here-32-chars

# Docker Volumes
VOLUMES_CONFIG=.:/app:cached
NODE_MODULES_VOLUME=node_modules_volume:/app/node_modules