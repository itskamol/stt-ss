# Staging Environment Configuration
ENVIRONMENT=staging
NODE_ENV=staging
BUILD_TARGET=production

# Application Settings
PORT=3000

# Ports (Docker specific)
APP_PORT=3002
POSTGRES_PORT=5434
REDIS_PORT=6381

# Database
POSTGRES_DB=sector_staff_v2
POSTGRES_USER=postgres
POSTGRES_PASSWORD=staging_password
DATABASE_URL=postgresql://postgres:staging_password@localhost:5434/sector_staff_v2?schema=public

# Redis
REDIS_URL=redis://localhost:6381

# JWT Configuration
JWT_SECRET=staging-jwt-secret-key-change-for-production
JWT_EXPIRATION_TIME=15m
REFRESH_TOKEN_SECRET=staging-refresh-token-secret-key
REFRESH_TOKEN_EXPIRATION_TIME=7d

# S3 Configuration
S3_ENDPOINT=https://staging-s3-endpoint.com
S3_ACCESS_KEY=staging-s3-access-key
S3_SECRET_KEY=staging-s3-secret-key
S3_BUCKET_NAME=sector-staff-staging

# Logging
LOG_LEVEL=info

# Docker Settings
RESTART_POLICY=unless-stopped
DISABLE_HEALTHCHECK=false
DEPENDS_CONDITION=service_healthy

# Volume configuration for staging
VOLUMES_CONFIG=/app
NODE_MODULES_VOLUME=/app/node_modules
