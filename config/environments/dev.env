# Development Environment Configuration
ENVIRONMENT=dev
NODE_ENV=development
BUILD_TARGET=development

# Application Settings
PORT=3000

# Ports (Docker specific)
APP_PORT=3001
POSTGRES_PORT=5433
REDIS_PORT=6380

# Database
POSTGRES_DB=sector_staff_v2
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
DATABASE_URL=postgresql://postgres:postgres@localhost:5433/sector_staff_v2?schema=public

# Redis
REDIS_URL=redis://localhost:6380

# JWT Configuration
JWT_SECRET=dev-jwt-secret-key-change-in-production
JWT_EXPIRATION_TIME=15m
REFRESH_TOKEN_SECRET=dev-refresh-token-secret-change-in-production
REFRESH_TOKEN_EXPIRATION_TIME=7d

# S3 Configuration (MinIO for development)
S3_ENDPOINT=http://localhost:9000
S3_ACCESS_KEY=minioadmin
S3_SECRET_KEY=minioadmin
S3_BUCKET_NAME=sector-staff-dev

# Logging Configuration
LOG_LEVEL=debug
LOG_FORMAT=pretty
ENABLE_FILE_LOGGING=true
SUPPRESS_NEST_LOGS=true

# Docker Settings
RESTART_POLICY=unless-stopped
DISABLE_HEALTHCHECK=true
DEPENDS_CONDITION=service_started

# Volume configuration for hot reload
VOLUMES_CONFIG=.:/app
NODE_MODULES_VOLUME=/app/node_modules
