# Production Environment Configuration
ENVIRONMENT=prod
NODE_ENV=production
BUILD_TARGET=production

# Application Settings
PORT=3000

# Ports (Docker specific)
APP_PORT=3000
POSTGRES_PORT=5432
REDIS_PORT=6379

# Database (use strong passwords in production!)
POSTGRES_DB=sector_staff_v2
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_strong_password_here
DATABASE_URL=postgresql://postgres:your_strong_password_here@localhost:5432/sector_staff_v2?schema=public

# Redis
REDIS_URL=redis://localhost:6379

# JWT Configuration (CHANGE THESE IN PRODUCTION!)
JWT_SECRET=your-super-secret-jwt-key-here-min-32-chars
JWT_EXPIRATION_TIME=15m
REFRESH_TOKEN_SECRET=your-super-secret-refresh-token-key-here
REFRESH_TOKEN_EXPIRATION_TIME=7d

# S3 Configuration
S3_ENDPOINT=https://your-s3-endpoint.com
S3_ACCESS_KEY=your-s3-access-key
S3_SECRET_KEY=your-s3-secret-key
S3_BUCKET_NAME=sector-staff-prod

# Logging
LOG_LEVEL=info

# Docker Settings
RESTART_POLICY=always
DISABLE_HEALTHCHECK=false
DEPENDS_CONDITION=service_healthy

# Volume configuration for production (no source mounting)
VOLUMES_CONFIG=/app
NODE_MODULES_VOLUME=/app/node_modules
