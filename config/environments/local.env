# Local Development Configuration (without Docker)
NODE_ENV=development
PORT=3000

# Database Configuration
DATABASE_URL="postgresql://postgres:12345@localhost:5432/sector_staff_v2?schema=public"

# Redis Configuration
REDIS_URL="redis://localhost:6379"

# JWT Configuration
JWT_SECRET="local-jwt-secret-key-for-development-only-must-be-32-chars-long"
JWT_EXPIRATION_TIME="15m"
REFRESH_TOKEN_SECRET="local-refresh-token-secret-for-development-must-be-32-chars-long"
REFRESH_TOKEN_EXPIRATION_TIME="7d"

ENCRYPTION_SECRET_KEY=your-super-secret-encryption-key-32-chars-long-minimum
ENCRYPTION_ALGORITHM=aes-256-gcm

# S3/MinIO Configuration
S3_ENDPOINT="http://localhost:9000"
S3_ACCESS_KEY="minioadmin"
S3_SECRET_KEY="minioadmin"
S3_BUCKET_NAME="sector-staff-local"

# Logging Configuration
LOG_LEVEL="info"
LOG_FORMAT="pretty"
ENABLE_FILE_LOGGING="true"
SUPPRESS_NEST_LOGS="true"