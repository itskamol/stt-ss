# Production Environment Configuration
NODE_ENV=production
PORT=3000

# Database Configuration (Production)
DATABASE_URL="postgresql://username:password@localhost:5432/sector_staff_v2?schema=public"

# Redis Configuration (Production)
REDIS_URL="redis://localhost:6379"

# JWT Configuration (MUST BE CHANGED IN PRODUCTION)
JWT_SECRET="CHANGE-THIS-TO-A-SECURE-SECRET-IN-PRODUCTION"
JWT_EXPIRATION_TIME="15m"
REFRESH_TOKEN_SECRET="CHANGE-THIS-TO-A-SECURE-REFRESH-SECRET-IN-PRODUCTION"
REFRESH_TOKEN_EXPIRATION_TIME="7d"

# S3/MinIO Configuration (Production)
S3_ENDPOINT="https://your-s3-endpoint.com"
S3_ACCESS_KEY="your-production-access-key"
S3_SECRET_KEY="your-production-secret-key"
S3_BUCKET_NAME="sector-staff-prod"

# Logging Configuration
LOG_LEVEL="warn"

# CORS Configuration (Restrict to your domain)
CORS_ORIGIN="https://yourdomain.com"

# Rate Limiting (More restrictive for production)
THROTTLE_TTL=60
THROTTLE_LIMIT=100

# API Configuration
API_PREFIX="api/v1"

# Health Check
HEALTH_CHECK_ENABLED=true

# Security
HELMET_ENABLED=true
COMPRESSION_ENABLED=true
