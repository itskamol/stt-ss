# Development Environment Configuration
NODE_ENV=development
PORT=3000

# Database Configuration (Local development)
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/sector_staff_v2?schema=public"

# Redis Configuration (Local development)
REDIS_URL="redis://localhost:6379"

# JWT Configuration
JWT_SECRET="dev-jwt-secret-key-not-for-production"
JWT_EXPIRATION_TIME="1h"
REFRESH_TOKEN_SECRET="dev-refresh-token-secret-not-for-production"
REFRESH_TOKEN_EXPIRATION_TIME="7d"

# S3/MinIO Configuration (Local development)
S3_ENDPOINT="http://localhost:9000"
S3_ACCESS_KEY="minioadmin"
S3_SECRET_KEY="minioadmin"
S3_BUCKET_NAME="sector-staff-dev"

# Logging Configuration
LOG_LEVEL="debug"

# CORS Configuration
CORS_ORIGIN="http://localhost:3000,http://localhost:3001"

# Rate Limiting (More lenient for development)
THROTTLE_TTL=60
THROTTLE_LIMIT=1000

# API Configuration
API_PREFIX="api/v1"

# Health Check
HEALTH_CHECK_ENABLED=true
